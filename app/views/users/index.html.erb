<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Show Wunsches', wunsches_path, class: "btn btn-primary" %>

<p id="notice"><%= notice %></p>

<h1>Listing Wunsches</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Anzahl</th>
      <th>Geschenkt</th>
      <th>Preis €</th>
      <th>Link</th>
      <th>Beschreibung</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wunsches.each do |wunsch| %>
      <tr>
        <td><%= wunsch.name %></td>
        <td><%= wunsch.anzahl %></td>
        <td><%= wunsch.geschenkt %></td>
        <td><%= wunsch.preis %></td>
        <td><%= link_to wunsch.link, wunsch.link %></td>
        <td><%= wunsch.beschreibung %></td>
        <td><%= wunsch.user.name %></td>
        <td><%= link_to 'Show', wunsch, class: "btn btn-default" %></td>
        <% if current_user == wunsch.user %>
        <td><%= link_to 'Edit', edit_wunsch_path(wunsch), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete', wunsch, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Wünsche verschicken', send_wishlist_wunsches_path, class: "btn btn-default" %>
<%= link_to 'Neuer Wunsch', new_wunsch_path, class: "btn btn-default" %>
